<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_width="328dp"
    android:layout_height="278dp">

    <TextView
        android:id="@+id/health_popup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팔 운동"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="328dp"
        android:layout_height="138dp"
        android:background="#ebebeb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </View>

    <Button
        android:id="@+id/go_health"
        android:layout_width="144dp"
        android:layout_height="64dp"
        android:background="@drawable/select_popup_button_background"
        android:text="운동하기"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/health_popup_title" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:text="취소"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/select_popup_cancle_button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"/>



</androidx.constraintlayout.widget.ConstraintLayout>
