<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.SelectHealthSystemActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="#1c8ced"
        android:scaleType="center"
        android:src="@drawable/arm_health"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/system1"
        android:layout_width="296dp"
        android:layout_height="64dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/select_temp_temp_button_background"
        android:text="이완기 측정"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:backgroundTint=" #00c5c7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/select_bmi_background"
        android:text="뒤로가기"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:backgroundTint=" #ff861c"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/system2"
        android:layout_width="296dp"
        android:layout_height="64dp"
        android:layout_marginTop="57dp"
        android:background="@drawable/select_temp_temp_button_background"
        android:text="수축기 측정"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:backgroundTint=" #00c5c7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/system1" />


</androidx.constraintlayout.widget.ConstraintLayout>